<html>
    <head>
        {{>navbar/head}}
        <style>
        .dropdown {
  display: inline-block;
  position: relative;
}
.dropdown-content {
  display: none;
  position: absolute;
  width: 200%;
  overflow: auto;
  box-shadow: 0px 10px 10px 0px rgba(0,0,0,0.4);
}
.dropdown:hover .dropdown-content {
  display: block;
}
.dropdown-content a {
  display: block;
  color: #000000;
  padding: 5px;
  text-decoration: none;
}
.dropdown-content a:hover {
  color: #FFFFFF;
  background-color: #00A4BD;
}
        </style>
    </head>
    <body>
        {{>navbar/navStaff}}
        <section class="page-section cta">
            <div class="container">
                <div class="row">
                    <div class="col-xl-9 mx-auto">
                        <div class="cta-inner bg-faded text-center rounded">
                            <label for="menu">Choose Menu Item To Update</label><br>
                            <div class="dropdown">
                                <button>Dishes</button>
                                <div class="dropdown-content">
                                    {{#dishes}}
                                        <a href="/post/{{id}}">{{id}} {{name}}</a>
                                    {{/dishes}}
                                </div>
                            </div>
                            <form method="POST" action="/updateItem">
                                <div class="form-group">
                                    <ul>
                                    {{#entries}}
                                    <input type="hidden" id="_id" name="_id" value="{{_id}}">
                                        <li>
                                            <input type="text" id="id" name="id" value="{{id}}">ID (<red>!!!DO NOT CHANGE!!!</red>)
                                        </li>
                                        <li>
                                            <input  type="text" id="available" name="available"value="{{available}}">Available?
                                        </li>
                                        <li>
                                            <input type="text" id="product" name="product"value="{{product}}">Product
                                        </li>
                                        <li>
                                            <input  type="text" id="dishType" name="dishType"value="{{dishType}}">Type Of Dish
                                        </li>
                                         <li>
                                            <input type="text" id="name" name="name"value="{{name}}">Name
                                        </li>
                                        <li>
                                            <input  type="text" id="price" name="price"value="{{price}}">Price
                                        </li>
                                         <li>
                                            <input type="text" id="description" name="description"value="{{description}}">Short Description
                                        </li>
                                        <li>
                                            <input  type="text" id="allergen" name="allergen"value="{{allergen}}">Allergens
                                        </li>
                                         <li>
                                            <input type="text" id="lunch" name="lunch"value="{{lunch}}">Available for Lunch Set Menu
                                        </li>
                                        <li>
                                            <input  type="text" id="dinner" name="dinner"value="{{dinner}}">Available for Dinner Set Menu
                                        </li>
                                    {{/entries}}    
                                    {{^entries}}
                                    Click on Dish you want to update
                                    {{/entries}}
                                    </ul>  
                                    <input type="submit" value="Submit" class="btn btn-primary">
                                </div>
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </body>
</html>